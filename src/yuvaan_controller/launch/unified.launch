<launch>
  <!-- Unified Control System: Drive + 3 Servos -->
  
  <!-- Joy node -->
  <node pkg="joy" type="joy_node" name="joy_node" output="screen">
    <param name="dev" type="string" value="/dev/input/js0" />
  </node>

  <!-- Unified control node -->
  <node pkg="yuvaan_controller" type="unified_control.py" name="unified_control" output="screen" />

  <!-- Rosserial for Arduino -->
  <node pkg="rosserial_python" type="serial_node.py" name="rosserial_node" output="screen">
    <param name="port" value="/dev/ttyACM0" />
    <param name="baud" value="115200" />
  </node>
</launch>
